<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultTajwidActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />

    <TextView
        android:id="@id/tvTajwid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hukum Bacaan: "
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berikut penjelasannya:"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yang anda bacakan"
            android:paddingLeft="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tvPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:background="@color/bluelight"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cara membaca yang benar"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tvKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="@color/bluelight"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hukum Bacaan"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tvSebab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nun mati/Tanwin bertemu dengan huruf "
            android:padding="10dp"
            android:textSize="16sp"
            android:background="@color/bluelight"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/reloadBtnTajwid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Ulangi Tajwid"
            android:background="@drawable/bg_primary"
            android:layout_weight="1">
        </Button>

    </LinearLayout>


    <!--    <ImageButton-->
    <!--        android:id="@+id/reloadBtn"-->
    <!--        android:scaleType="fitCenter"-->
    <!--        android:layout_width="50dp"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:background="@null"-->
    <!--        android:src="@drawable/reload"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:layout_centerVertical="true"-->
    <!--        android:layout_centerHorizontal="true"/>-->

</LinearLayout>