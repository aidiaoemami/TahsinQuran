<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">


    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berikut penjelasannya:"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/lafadz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yang anda bacakan"
            android:paddingLeft="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:background="@color/bluelight"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cara membaca yang benar"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluelight">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp">

                <TextView
                    android:id="@+id/key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:background="@color/bluelight"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="Suspicious0dp"
                android:background="@color/bluelight">
                    <ImageView
                        android:id="@+id/playAudio"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/play"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Putar Audio"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="2dp"
                        />
            </LinearLayout>
        </LinearLayout>





        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hukum Bacaan"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tvTajwid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="@color/bluelight"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/reloadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Ulangi Tahsin"
            android:textStyle="bold"
            android:background="@drawable/bg_primary"
            android:layout_weight="1">
        </Button>

    </LinearLayout>


